<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _NET</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_NET.styles.css" asp-append-version="true" />
  </head>

  <body>
    <div style="">
      <div
        style="
          width: 250px;
          height: 100vh;
          position: fixed;
          top: 0;
          bottom: 0;
          display: flex;
          justify-content: center;
        "
      >
        <div
          style="
            display: flex;
            gap: 25px;
            align-content: center;
            flex-direction: column;
          "
        >
          <a href="/">Trang chủ</a>
          <a href="/user">Quản lý nhân viên</a>
          <a href="">Quản lý Sách</a>
          <a href="">Mượn trả sách</a>
          <a href=""></a>
        </div>
      </div>
      <div style="height: 1400px; margin-left: 250px">
        <nav
          style="
            height: 50px;
            border-bottom: 1px solid #ccc;
            display: flex;
            justify-content: end;
            align-items: center;
            padding: 0 20px;
            position: fixed;
            right: 0;
            left: 250px;
          "
        >
          123
        </nav>
        <div style="padding-top: 50px">
          <main>@RenderBody()</main>
        </div>
      </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
  </body>
</html>
